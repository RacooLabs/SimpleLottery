<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.racoo.simplelottery">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7972968096388401~2845347199"/>

        <activity android:name="com.racoo.simplelottery.LoadingActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.racoo.simplelottery.MainActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait">

        </activity>




        <activity android:name="com.racoo.simplelottery.HistoryActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait">

        </activity>




    </application>



</manifest>